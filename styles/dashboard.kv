# #:kivy !

<PersonalRecord>:
    # ids
    label: label

    PRMax:
        # attributes
        adaptive_width: True

        MDLabel:
            id: label
        

<WorkoutDesc>:
    # ids
    header: header
    set: sets

    orientation: "vertical"
    md_bg_color: 0.95, 1, 1, 1
    adaptive_height: True
    padding: 5
    
    MDBoxLayout:
        id: header
        adaptive_height: True

    MDSeparator:

    MDGridLayout:
        id: sets
        adaptive_height: True
 

<DashboardCard>:
    # root variables
    title: "NO TITLE"

    # ids
    label_id: label_id
    list_id: list_id

    # Card attributes
    orientation: "vertical"
    padding: 5
    size_hint_y: None
    height: self.minimum_height
    shadow_offset: 0,2
    elevation: 2
    md_bg_color: 0.8, 0.95, 0.97, 1

    
    MDLabel:
        id: label_id
        padding: 0, 10
        text: str(root.title)
        halign: "center"
        font_size: 25
        adaptive_height: True
        valign: "top"

    MDList:
        id: list_id


<NavDashboard>:
    # ids
    greeting: greeting
    scroll_layout: scroll_layout
    last_session: last_session
    personal_records: personal_records
    option_3: option_3

    # variables
    fab_distance: 30
    
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: root.size
            elevation: 2
            spacing: 5

            MDLabel:
                id: greeting
                padding: 20, 10
                bold: True
                font_size: 36
                text_size: self.size
                adaptive_height: True

            MDScrollView:
                always_overscroll: True
                do_scroll_x: False

                MDBoxLayout:
                    id: scroll_layout
                    orientation: "vertical"
                    padding: 25
                    adaptive_height: True
                    spacing: 15

                    DashboardCard:
                        id: last_session
                        title: "Last Session"

                    DashboardCard:
                        id: personal_records
                        title: "Personal Records"

                    DashboardCard:
                        id: option_3
                        title: "Option 3"
                    
                    Widget:

        MDFloatingActionButtonSpeedDial:
            hint_animation: True
            data: root.speed_dial_data
            icon: "plus"
            icon_size: 48
            type: "large"
            elevation: 2
            x: root.width - self.width - int(root.fab_distance)
            y: int(root.fab_distance)
            # on_press: root.add_workout()