# #:kivy !

#:import NavDashboard    nav_screens.dashboard
#:import NavHistory      nav_screens.history
#:import NavStats        nav_screens.stats
#:import NavSettings     nav_screens.settings

#:set dashboard_txt "Dashboard"
#:set history_txt   "History" 
#:set stats_txt     "Stats" 
#:set settings_txt  "Settings" 

<HomeScreen>:
    name: "Home"

    MDBottomNavigation:
        md_bg_color: 0,0,0,1
        

        MDBottomNavigationItem:
            name: dashboard_txt
            icon: "view-dashboard-outline"
            text: dashboard_txt

            NavDashboard:
                size: root.width, root.height


        MDBottomNavigationItem:
            name: history_txt
            icon: "clipboard-text-clock-outline"
            text: history_txt

            NavHistory:
                size: root.width, root.height


        MDBottomNavigationItem:
            name: stats_txt
            icon: "chart-line"
            text: stats_txt

            NavStats:
                size: root.width, root.height


        MDBottomNavigationItem:
            name: settings_txt        
            icon: "cog-outline"
            text: settings_txt

            NavSettings:
                size: root.width, root.height