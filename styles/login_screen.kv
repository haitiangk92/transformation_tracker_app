<LoginScreen>    
    name: "Login"

    # Component ids 
    email: email
    password: password

    MDBoxLayout:
        orientation: "vertical"
        padding: 50, 50 #w,h
        size: root.width, root.height
        # size: 500, 700

        MDSmartTile:
            radius: 24
            box_radius: [0, 0, 24, 24]
            box_color: 1, 1, 1, .2
            source: "assets/muscles.png"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: None, None
            size: "160dp", "160dp"

        MDLabel:
            text:"Transformation Tracker"
            font_size: 30
            halign: "center"

        MDBoxLayout:
            orientation: "vertical"
            padding: 0, 10 #w,h
            size: root.width, root.height/5

            MDLabel:
                text: "Email"
                font_size: 15

            MDTextField:
                id : email
                multiline: False
                write_tab: False

        MDBoxLayout:
            orientation: "vertical"
            padding: 0, 10 #w,h
            size: root.width, root.height/5

            MDLabel:
                text: "Password"
                font_size: 15

            MDTextField:
                id: password  
                multiline: False
                password: True
                write_tab: False
                on_text_validate: root. btn_clicked()
        
        
        MDRaisedButton:
            on_press: root.btn_clicked()
            text: "Login"
            halign: "center"
            focusable: True
        
        MDGridLayout:
            cols: 2

            MDLabel:   
                text: "[u][ref=forgot]Forgot Password[/ref][/u]"
                markup: True
                on_ref_press: root.forgot_password()
                color: 0.3,0.5,1,1
                halign: "center"

            MDLabel:   
                text: "[u][ref=create]Create Account[/ref][/u]"
                markup: True
                # on_ref_press: root.create_account()
                color: 0.3,0.5,1,1
                halign: "center"
                on_ref_press: 
                    app.root.current = "CreateAccount"
                    root.manager.transition.direction = "left"